<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/app_bar_learn"
        android:layout_height="50dp"
        android:background="@android:color/white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="152dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/chapters" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHAPTERS"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:fontFamily="@font/aileronthin"
                android:textSize="20dp"
                android:textColor="@android:color/black"/>

            <ImageView
                android:id="@+id/open_chapters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="310dp"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                >
            </ImageView>
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar_learn"
        android:id="@+id/tabbar_learn"
        app:tabGravity="fill"
        app:tabBackground="@android:color/white"
        app:tabSelectedTextColor="@android:color/holo_blue_light"
        app:tabIndicatorColor="@android:color/holo_blue_bright"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorAnimationDuration="1000"
        app:tabIndicatorGravity="top"
        app:tabMode="fixed"
        app:tabTextColor="@android:color/black"
        app:tabIndicatorHeight="3dp"
        app:tabRippleColor="@android:color/holo_blue_light"

        >

    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabbar_learn"
        android:id="@+id/viewPager_learn"></androidx.viewpager.widget.ViewPager>

</RelativeLayout>