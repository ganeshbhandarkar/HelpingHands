<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/scroll_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_profile"
    android:orientation="vertical"
    app:layout_collapseMode="parallax">

    <RelativeLayout
        android:id="@+id/account_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/settings_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/settings" />

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/settings_button"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/aileronthin"
            android:letterSpacing="0.1"
            android:text="Welcome Back"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:fontFamily="@font/nasal"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ProfilePhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/settings_button"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/parentpic" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardview_profile"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_below="@id/ProfilePhoto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:elevation="6dp"
            app:cardCornerRadius="5dp"
            card_view:elevation="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_person_profile_24dp"
                android:fontFamily="@font/aileronthin"
                android:letterSpacing="0.05"
                android:text="Get to know you Better"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />


        </com.google.android.material.card.MaterialCardView>

        <RelativeLayout
            android:id="@+id/relative_days"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/cardview_profile"
            android:layout_marginTop="20dp">


            <LinearLayout
                android:id="@+id/buttons_days"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/need_help_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_buttons"
                    android:fontFamily="@font/aileronthin"
                    android:text="NEED Specific  Help"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/complain_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_buttons"
                    android:fontFamily="@font/aileronthin"
                    android:text="Complains"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/picks"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/relative_days"
            android:layout_marginTop="15dp"
            android:background="@android:color/white">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/aileronthin"
                android:letterSpacing="0.08"
                android:padding="16dp"
                android:text="My Favourite Picks"
                android:textColor="@android:color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/aileronthin"
                android:letterSpacing="0.08"
                android:padding="16dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="17dp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/recommend"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/improve"
            android:layout_marginTop="15dp"
            android:background="@android:color/white">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/ic_send_black_24dp"
                android:fontFamily="@font/aileronthin"
                android:letterSpacing="0.08"
                android:padding="16dp"
                android:id="@+id/recommend_button"
                android:text="Recommend Helping Hands"
                android:textColor="@android:color/black"
                android:textSize="17dp"
                android:textStyle="bold" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/improve"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/picks"
            android:layout_marginTop="15dp"
            android:background="@android:color/white">


            <TextView
                android:id="@+id/improve_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/ic_thumb_up_black_24dp"
                android:fontFamily="@font/aileronthin"
                android:letterSpacing="0.08"
                android:padding="16dp"
                android:text="Help Us Improve"
                android:textColor="@android:color/black"
                android:textSize="17dp"
                android:textStyle="bold" />


        </RelativeLayout>


